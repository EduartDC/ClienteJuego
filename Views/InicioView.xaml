<Page x:Class="ClienteJuego.Views.InicioView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteJuego.Views"
      mc:Ignorable="d"
      xmlns:leng ="clr-namespace:ClienteJuego.Properties"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="InicioView">

    <Grid Background="#0f0e17">
        <Button x:Name="btnPlay" 
                Content="Play" 
                HorizontalAlignment="Center" 
                Margin="0,355,0,0" 
                VerticalAlignment="Top" 
                Width="110" 
                Click="btnPlay_Click"/>
        <Button x:Name="btnScore" 
                Content="Score" 
                HorizontalAlignment="Center" 
                Margin="0,394,0,0" 
                VerticalAlignment="Top" 
                Width="76"/>
        <Button Name="btnOptions" 
                Background="{x:Null}" 
                Margin="717,10,10,383" Click="btnOptions_Click" BorderBrush="{x:Null}" >
            <Image Source="/Images/barra-de-menus.png" />
        </Button>
    </Grid>
</Page>
