<Page x:Class="ClienteJuego.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteJuego.Views"
      mc:Ignorable="d"
      xmlns:p="clr-namespace:ClienteJuego.Properties"
      d:DesignHeight="600" d:DesignWidth="800"
      MaxHeight="600" MaxWidth="800"
      Title="SettingsView">

    <Grid Background="#FF0F0E17">
        <Image 
            Margin="345,138,-140,140" 
            Source="/Images/ok3.png" 
            Opacity="0.3" 
            RenderTransformOrigin="0.5,0.5" 
            Stretch="Fill"            
        >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label 
            x:Name="lblSettings" 
            Content="{x:Static p:Resources.lblSettings}" 
            HorizontalAlignment="Center" 
            Margin="0,21,0,0" 
            VerticalAlignment="Top" 
            Foreground="White" 
            FontWeight="Bold" 
            FontSize="24" 
            Width="308" 
            VerticalContentAlignment="Center" 
            HorizontalContentAlignment="Center"
         />
        <Label 
            x:Name="lblTheme" 
            Content="{x:Static p:Resources.lblTheme}" 
            HorizontalAlignment="Center" 
            Margin="0,116,0,0" 
            VerticalAlignment="Top" 
            Foreground="White" 
            FontWeight="Bold" 
            FontSize="22" 
            Width="308" 
            VerticalContentAlignment="Center" 
            HorizontalContentAlignment="Center"
         />
        <RadioButton x:Name="radioBtnDark"            
            Content="{x:Static p:Resources.radioBtnDark}" 
            HorizontalAlignment="Left" 
            Margin="246,167,0,0" 
            VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="18"
         />
        <RadioButton x:Name="radioBtnNormal"            
            Content="Normal" 
            HorizontalAlignment="Left" 
            Margin="454,167,0,0" 
            VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="18"
         />
        <Label 
            x:Name="lblLanguage" 
            Content="{x:Static p:Resources.lblLanguage}" 
            HorizontalAlignment="Center" 
            Margin="0,214,0,0" 
            VerticalAlignment="Top" 
            Foreground="White" 
            FontWeight="Bold" 
            FontSize="22" 
            Width="308" 
            VerticalContentAlignment="Center" 
            HorizontalContentAlignment="Center"
         />
        <RadioButton x:Name="radioBSpanish"            
            Content="{x:Static p:Resources.radioBSpanish}" 
            HorizontalAlignment="Left" 
            Margin="246,265,0,0" 
            VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="18"
         />
        <RadioButton x:Name="radioBEnglish"            
            Content="{x:Static p:Resources.radioBEnglish}" 
            HorizontalAlignment="Left" 
            Margin="454,265,0,0" 
            VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="18"
         />
        <Button x:Name="btnCancel" 
            Content="{x:Static p:Resources.btnCancel}" 
            HorizontalAlignment="Left" 
            Margin="255,372,0,0" 
            VerticalAlignment="Top" 
            Background="#FFBB6200" 
            Foreground="White" 
            FontWeight="Bold" 
            FontSize="16" Height="40" Width="75" Click="btnCancel_Click"
         />
        <Button x:Name="btnSave" 
            Content="{x:Static p:Resources.btnSave}" 
            HorizontalAlignment="Left" 
            Margin="449,372,0,0" 
            VerticalAlignment="Top" 
            Background="#FFFF8906" 
            Foreground="White" 
            FontWeight="Bold" 
            FontSize="16" Height="40" Width="75" Click="btnSave_Click"
         />
        <Button x:Name="btnCredits" 
            Content="{x:Static p:Resources.btnCredits}" 
            HorizontalAlignment="Left" 
            Margin="59,519,0,0" 
            VerticalAlignment="Top" 
            Background="#FF0665FF" 
            Foreground="White" 
            FontWeight="Bold" 
            FontSize="16" Height="40" Width="75" Click="btnSave_Click"
         />

    </Grid>
</Page>
