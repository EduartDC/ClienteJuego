<Page x:Class="ClienteJuego.Views.LobbyView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteJuego.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="LobbyView">

    <Grid Background="#FF0F0E17">
        <Image 
            HorizontalAlignment="Center" 
            Height="423" 
            VerticalAlignment="Top" 
            Width="808" 
            Source="/Images/ok3.png" 
            RenderTransformOrigin="0.5,0.5" 
            Margin="0,-1,0,0" 
            Opacity="0.3"
         >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform 
                        Angle="180"
                     />
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image 
            HorizontalAlignment="Center" 
            Height="152" 
            Margin="0,66,0,0" 
            VerticalAlignment="Top" 
            Width="142" 
            Source="/Images/ppGame.png"
         />
        <Label 
            x:Name="lblNameUsuario" 
            Content="Label" 
            HorizontalAlignment="Center" 
            Margin="0,225,0,0" 
            VerticalAlignment="Top" 
            Foreground="White" 
            FontWeight="Bold" 
            FontSize="16" 
            Width="300" 
            HorizontalContentAlignment="Center" 
            VerticalContentAlignment="Center"
         />
        <Button 
            Content="" 
            HorizontalAlignment="Center" 
            Margin="0,278,0,0" 
            VerticalAlignment="Top" 
            Height="100" Width="142" 
            BorderBrush="#00000000" 
            Click="Button_Click"
         >
            <Button.Background>
                <ImageBrush 
                    ImageSource="/Images/play.png" 
                    Stretch="Uniform"
                 />
            </Button.Background>
        </Button>
       

    </Grid>
</Page>
