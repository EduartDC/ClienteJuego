<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteJuego.Views"
      xmlns:Properties="clr-namespace:ClienteJuego.Properties"
      xmlns:p="clr-namespace:ClienteJuego.Properties"
    x:Class="ClienteJuego.Views.MenuOptionsView"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      MaxHeight="600" MaxWidth="800"
      Title="MenuOptionsView">

    <Grid Background="#0f0e17">

        <Label 
        x:Name="lblOptions" 
        Content="{x:Static Properties:Resources.lblOptions}" 
        HorizontalAlignment="Center" 
        Margin="0,21,0,0" 
        VerticalAlignment="Top" 
        Foreground="White" 
        FontWeight="Bold" 
        FontSize="24" 
        Width="308" 
        VerticalContentAlignment="Center" 
        HorizontalContentAlignment="Center"
         />
        <Label 
            x:Name="lblAccount" 
            Content="{x:Static p:Resources.lblAccount}" 
            HorizontalAlignment="Left" 
            Margin="400,100,0,0" 
            VerticalAlignment="Top" 
            Foreground="White" 
            FontWeight="Bold" 
            FontSize="16"
         />
        <Image 
            HorizontalAlignment="Left" 
            Height="61" 
            Margin="336,85,0,0" 
            VerticalAlignment="Top" 
            Width="61" 
            Source="/Images/usuario.png"
         />
        <Button 
            x:Name="btnAccount" 
            Content="" 
            HorizontalAlignment="Center" 
            Margin="0,87,0,0" 
            VerticalAlignment="Top" 
            Background="#00000000" 
            BorderBrush="#00000000" 
            Width="126" 
            Height="61"
         />
        <Label 
            x:Name="lblHelp" 
            Content="{x:Static p:Resources.lblHelp}" 
            HorizontalAlignment="Left" 
            Margin="400,177,0,0" 
            VerticalAlignment="Top" 
            Foreground="White" 
            FontWeight="Bold" 
            FontSize="16"
         />
        <Image 
            HorizontalAlignment="Left" 
            Height="61" 
            Margin="336,162,0,0" 
            VerticalAlignment="Top" 
            Width="61" 
            Source="/Images/information.png"
         />
        <Button 
            x:Name="btnAccount_Copy" 
            Content="" 
            HorizontalAlignment="Left" 
            Margin="330,162,0,0" 
            VerticalAlignment="Top" 
            Background="#00000000" 
            BorderBrush="#00000000" 
            Width="127" 
            Height="61"
         />
        <Label 
            x:Name="lblCredits" 
            Content="{x:Static p:Resources.lblCredits}" 
            HorizontalAlignment="Left" 
            Margin="400,248,0,0" 
            VerticalAlignment="Top" 
            Foreground="White" 
            FontWeight="Bold" 
            FontSize="16"
         />
        <Image 
            HorizontalAlignment="Left" 
            Height="66" 
            Margin="334,228,0,0" 
            VerticalAlignment="Top" 
            Width="75" 
            Source="/Images/credits.png" OpacityMask="#FFED0000"
         />
        <Button 
            x:Name="btnAccount_Copy1" 
            Content="" 
            HorizontalAlignment="Left" 
            Margin="468,235,0,0" 
            VerticalAlignment="Top" 
            Background="#00000000" 
            BorderBrush="#00000000" 
            Width="127" 
            Height="61"
         />
    </Grid>
</Page>
